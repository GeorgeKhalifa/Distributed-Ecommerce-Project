<%- include('partials/my-account-header') %>

			<div class="col-lg-8">
				<div class="section-header">
					<h2>Deposit cash into your account</h2>
				</div>
				<div class="row justify-content-center">
					<form action="/deposit_cash" method="POST">
						<div class="form-group">
							<label for="email">Cash</label>
							<input
							style="width: 110%;"
							type="number"
							id="cash"
							name="cash"
							class="form-control"
							placeholder="Enter cash"
							value="<%= typeof cash != 'undefined' ? cash : '' %>"
							/>
						</div>
						<div class="form-group">
							<label for="quantiy">Credit Card Secret Number</label>
							<input
							style="width: 110%;"
							type="password"
							class="form-control"
							placeholder="Enter Number"
							/>
							<button style="width: 110%;" type="submit" class="btn btn-primary btn-block">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
    </div>
</div>

<%- include('partials/footer') %>