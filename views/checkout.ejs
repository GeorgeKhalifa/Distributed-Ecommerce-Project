    <!-- Checkout Start -->
    <div class="container-fluid">
        <div class="checkout">


            <div class="row">
                <div class="col-lg-12">
                    <form class="checkout-form">

                        <h2 class="check-out-billing">Checkout Form</h2>


                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>First Name</label>
                                <input class="form-control" type="text" placeholder="First Name" required>
                            </div>

                            <div class="form-group col-lg-6">
                                <label>Last Name</label>
                                <input class="form-control" type="text" placeholder="Last Name" required>
                            </div>

                        </div>


                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>City</label>
                                <input class="form-control" type="text" placeholder="City" required>
                            </div>

                            <div class="form-group col-lg-6">
                                <label>Address</label>
                                <input class="form-control" type="text" placeholder="Address" required>
                            </div>

                        </div>


                        <div class="row">

                            <div class="form-group col-lg-6">
                                <label>Zip Code</label>
                                <input class="form-control" type="text" placeholder="Zip Code" required>
                            </div>


                            <div class="form-group col-lg-6">
                                <label>Mobile number</label>
                                <input class="form-control" type="text" placeholder="Mobile number" required>
                            </div>


                        </div>


                        <h2 class="check-out-billing">Payment method</h2>


                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1"
                                    value="option1" checked>
                                <label class="form-check-label" for="exampleRadios1">
                                    Cash on Delivery
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2"
                                    value="option2" checked>
                                <label class="form-check-label" for="exampleRadios2">
                                    Cash deposited in the account
                                </label>
                            </div>
                        </div>

