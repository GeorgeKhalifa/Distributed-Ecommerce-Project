<%- include('partials/header') %>

        <!--products view //////////////////////////////////////////////-->
        <div class="product-view">
            <div class="container-fluid">
                <div class="section-header">
                    <h1>Our Products</h1>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="row">
                            <% for(var i=0; i < products.length; i++) { %>
                                <div class="col-md-4">
                                    <div class="product-item">
                                        <div class="product-title">
                                            <a href="#"><%= products[i].name %></a>
                                            <div><a href=""><%= products[i].description %></a></div>
                                        </div>
                                        <div class="product-image">
                                            <a href="">
                                                <img style="width: 300px; height: 300px;" src="<%= products[i].image%>" alt="Product Image">
                                            </a>
                                        </div>
                                        <div class="product-price">
                                            <h3><span>$</span><%= products[i].price %></h3>
                                            <%- include("./partials/messages"); %>
                                            <a class="btn" href="/add_to_cart/<%= products[i]._id%> "><i class="fa fa-shopping-cart"></i>Add to Cart</a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-lg-4 sidebar">
                        <div class="sidebar-widget category">
                            <h2 class="title">Category</h2>
                            <nav class="navbar bg-light">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link"><i class="fa fa-tshirt"></i>Men</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"><i class="fa fa-female"></i>Women</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"><i class="fa fa-child"></i>Kids &amp; Babies Clothes</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>